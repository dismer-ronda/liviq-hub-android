<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:title="Hospital Platform Url"
        android:key="iq_url"
        android:summary="Please provide Hospital IQ Url"
        android:defaultValue="https://iqhospital.io">
    </EditTextPreference>

    <EditTextPreference
        android:title="Hospital Platform Timeout"
        android:key="iq_timeout"
        android:summary="Please provide Hospital IQ connection timeout"
        android:defaultValue="10000"></EditTextPreference>

    <EditTextPreference
        android:title="Bluetooth scaning timeout"
        android:key="ble_timeout"
        android:summary="Please provide bluetooth scaning timeout"
        android:defaultValue="5000">
    </EditTextPreference>
</PreferenceScreen>